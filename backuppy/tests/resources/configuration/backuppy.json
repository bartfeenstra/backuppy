{
  "name": "Test",
  "verbose": true,
  "notifications": [
    {
      "type": "notify-send"
    },
    {
      "type": "command",
      "state": ["echo", "{message}"],
      "inform": ["echo", "{message}"],
      "confirm": ["echo", "{message}"],
      "alert": ["echo", "{message}"],
      "fallback": ["echo", "{message}"]
    }
  ],
  "source": {
    "type": "path",
    "path": "./source"
  },
  "targets": [
    {
      "type": "ssh",
      "host": "example.com",
      "port": 22,
      "user": "bart",
      "path": "./target"
    }
  ]
}
